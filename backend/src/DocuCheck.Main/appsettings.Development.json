{
  "ConnectionStrings": {
    "DocuCheckDb": "Data Source=../../data/docucheck.db"
  },
  "HttpClients": {
    "MinistryOfInterior": {
      "BaseAddress": "https://aplikace.mvcr.cz/"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../../logs//log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
